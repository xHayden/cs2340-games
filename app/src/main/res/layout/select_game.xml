<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B1B"
    android:backgroundTint="#B30101"
    tools:context=".SelectGameScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6C0E1"
        android:backgroundTint="#F8D9D9"
        android:padding="16dp"
        app:layout_anchorGravity="center">

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="178dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/teal"
            android:clickable="true"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <ImageButton
                android:id="@+id/ticTacToeButton"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/teal"
                android:src="@drawable/rectangle_8"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:clickable="true"
                android:text="Tic Tac Toe"
                android:textAlignment="center"
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="411dp"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/teal"
            android:clickable="true"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <ImageButton
                android:id="@+id/blackjackButton"
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/teal"
                android:src="@drawable/rectangle_7"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:clickable="true"
                android:text="Black Jack"
                android:textAlignment="center"
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="400dp"
            android:layout_height="182dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/teal"
            android:clickable="true"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/wordleButton"
                android:layout_width="match_parent"
                android:layout_height="137dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/teal"
                android:src="@drawable/rectangle_6"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:clickable="true"
                android:text="Wordle"
                android:textAlignment="center"
                android:textSize="34sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>