<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98DA9B"
    android:orientation="vertical"
    tools:context=".Wordle">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/duck" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player Name" />

                <ProgressBar
                    android:id="@+id/healthBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/scoreboardLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:orientation="horizontal"
                android:padding="24dp">

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: 0" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/aI_cards"
        android:layout_width="350dp"
        android:layout_marginTop ="50dp"
        android:layout_marginStart ="30dp"
        android:layout_marginEnd="50dp"
        android:orientation="horizontal"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent" >

        <ImageView
            android:id="@+id/ai_card1"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/jack_of_hearts" />
        <ImageView
            android:id="@+id/ai_card2"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/queen_of_clubs" />
        <ImageView
            android:id="@+id/ai_card3"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/king_of_diamonds" />
        <ImageView
            android:id="@+id/ai_card4"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/jack_of_spades" />
        <ImageView
            android:id="@+id/ai_card5"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/queen_of_diamonds" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_cards"
        android:layout_width="350dp"
        android:layout_marginTop="170dp"
        android:layout_marginStart ="30dp"
        android:layout_marginEnd="50dp"
        android:orientation="horizontal"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent" >

        <ImageView
            android:id="@+id/player_card1"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/jack_of_hearts" />
        <ImageView
            android:id="@+id/player_card2"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/queen_of_clubs" />
        <ImageView
            android:id="@+id/player_card3"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/king_of_diamonds" />
        <ImageView
            android:id="@+id/player_card4"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/jack_of_spades" />
        <ImageView
            android:id="@+id/player_card5"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/queen_of_diamonds" />

    </LinearLayout>



